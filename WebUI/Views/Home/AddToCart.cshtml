@model Models.OrderItem

@{
    ViewData["Title"] = "AddoCart";
    Layout = "~/Views/Shared/_CustLayout.cshtml";
}

<h1>Add To Cart</h1>

<h3>How many would you like?</h3>
<div>
    <h4>Brew</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brew.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brew.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brew.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brew.Price)
        </dd>
        <form asp-action="AddToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrewId" class="control-label"></label>
                <input asp-for="BrewId" class="form-control" />
                <span asp-validation-for="BrewId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <input asp-for="OrderId" class="form-control" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </dl>
</div>
