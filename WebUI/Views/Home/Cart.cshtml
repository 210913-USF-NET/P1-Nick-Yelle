@model IEnumerable<Models.OrderItem>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_CustLayout.cshtml";
}

<h1>Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brew.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brew.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.Total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brew.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brew.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        @foreach (var item in Model)
        {
        <tr>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.Total)
            </td>
        </tr>
        break;
        }
    </tfoot>
</table>
<p>
    <a asp-action="PlaceOrder">Place Order</a>
</p>
