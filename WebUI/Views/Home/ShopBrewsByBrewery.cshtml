@model IEnumerable<Models.Brew>

@{
    ViewData["Title"] = "ShopBrewsByBrewery";
    Layout = "../Shared/_CustLayout.cshtml";
}

<h1>All Brews</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Brewery
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brewery.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Index">Go Back</a>
</p>
